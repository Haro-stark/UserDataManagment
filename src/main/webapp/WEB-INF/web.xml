<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.example.userdata.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>com.example.userdata.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/userUpdate</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserInsertServlet</servlet-name>
        <servlet-class>com.example.userdata.userInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInsertServlet</servlet-name>
        <url-pattern>/insertUser</url-pattern>
    </servlet-mapping>



</web-app>